{
  "name": "auto-readme-lite",
  "version": "1.0.0",
  "description": "A fully offline CLI tool to auto-generate and update project README.md files using static analysis.",
  "main": "lib/index.js",
  "bin": {
    "auto-readme-lite": "bin/auto-readme-lite.js"
  },
  "scripts": {
    "test": "node example/test.js",
    "test:comprehensive": "node test/test-auto-readme.js",
    "test:comprehensive:save": "node test/test-auto-readme.js --save",
    "test:quick": "node test/run-tests.js"
  },
  "keywords": [
    "readme",
    "cli",
    "automation",
    "offline",
    "static-analysis",
    "documentation"
  ],
  "author": "yourname",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourname/auto-readme-lite.git"
  },
  "bugs": {
    "url": "https://github.com/yourname/auto-readme-lite/issues"
  },
  "dependencies": {
    "@babel/parser": "^7.28.0",
    "@babel/traverse": "^7.28.0",
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "simple-git": "^3.19.1",
    "ts-morph": "^20.0.0",
    "yargs": "^17.7.2"
  }
}
